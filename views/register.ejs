<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>register</title>
    <link rel="stylesheet" href="public/style.css">

</head>
<body>
<h1>Register</h1>
 <form method="POST" action="/register">
    <!-- Username input -->
  <form method="POST" action="/register" onsubmit="return validateForm()">
  <!-- Username input -->
  <input 
    type="text" 
    name="username" 
    placeholder="Username" 
    id="username"
  ><br>
  <span id="usernameError" style="color:red"></span>

  <!-- Password input -->
  <input 
    type="password" 
    name="password" 
    placeholder="Password" 
    id="password"
    pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}"
    title="Must be at least 8 characters, include uppercase, lowercase, a number, and a special character"
  >
  <span id="passwordError" style="color:red"></span>

  <!-- Submit Button -->
  <button type="submit">Submit</button><br>
</form>

<script>
function validateForm() {
  let isValid = true;

  const username = document.getElementById("username").value.trim();
  const password = document.getElementById("password").value;
  const usernameError = document.getElementById("usernameError");
  const passwordError = document.getElementById("passwordError");

  usernameError.textContent = "";
  passwordError.textContent = "";

  if (username === "") {
    usernameError.textContent = "Please enter a username";
    isValid = false;
  }

  const passwordPattern = /(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}/;
  if (!passwordPattern.test(password)) {
    passwordError.textContent = "Password must be at least 8 characters, include uppercase, lowercase, a number, and a special character";
    isValid = false;
  }

  return isValid;
}
</script>


    <!-- Submit Button -->
    <button type="submit">Register</button>
  </form>

  <a href="/login">Already have an account? Login here</a>
</body>
</html>
